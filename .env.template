# ========================================
# EXPENZO - Environment Variables Template
# ========================================
# Copy this file to create your actual .env files
# For local: Copy to backend/.env and frontend/.env
# For Vercel: Add these in Vercel Dashboard → Settings → Environment Variables

# ========================================
# BACKEND ENVIRONMENT VARIABLES
# ========================================

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRE=7d

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=https://your-project-name.vercel.app
ALLOWED_ORIGINS=https://your-project-name.vercel.app

# API Configuration
API_VERSION=v1
DEBUG=false

# ========================================
# DATABASE (Add when you set up database)
# ========================================

# Option 1: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/expenzo?retryWrites=true&w=majority

# Option 2: Vercel Postgres
# POSTGRES_URL=postgres://default:password@host-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb
# POSTGRES_PRISMA_URL=postgres://default:password@host-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb?pgbouncer=true&connect_timeout=15
# POSTGRES_URL_NON_POOLING=postgres://default:password@host.us-east-1.postgres.vercel-storage.com:5432/verceldb

# Option 3: Local MongoDB (Development only)
# MONGODB_URI=mongodb://localhost:27017/expenzo

# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================

# API Endpoint (automatically set by Vercel)
VITE_API_URL=https://your-project-name.vercel.app/api

# For local development
# VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=EXPENZO
VITE_APP_VERSION=1.0.0

# ========================================
# OPTIONAL INTEGRATIONS
# ========================================

# Email Service (if you add email functionality)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# Cloud Storage (if you add file uploads)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Analytics (if you add analytics)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ========================================
# VERCEL SPECIFIC (Auto-provided)
# ========================================
# These are automatically provided by Vercel - DO NOT SET MANUALLY
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-project.vercel.app
# VERCEL_GIT_COMMIT_SHA=abc123...
